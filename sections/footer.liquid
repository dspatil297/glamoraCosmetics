<footer class="footer">
  <div class="footer__grid">
    <div class="footer__column footer__brand">
      <div class="footer__logo">{{ shop.name | link_to: routes.root_url }}</div>
      {% if section.settings.show_contact %}
        <p class="footer__address">{{ section.settings.address | default: '38, Deputy Gunj, Moradabad - 244001, Uttar Pradesh, India' }}</p>
        <p class="footer__phone"><a href="tel:+918650751707">+91 86507 51707</a></p>
      {% endif %}
      {% if section.settings.social_instagram != blank or section.settings.social_facebook != blank %}
        <div class="footer__social">
          {% if section.settings.social_instagram != blank %}
            <a href="{{ section.settings.social_instagram }}" target="_blank" rel="noopener" aria-label="Instagram">Instagram</a>
          {% endif %}
          {% if section.settings.social_facebook != blank %}
            <a href="{{ section.settings.social_facebook }}" target="_blank" rel="noopener" aria-label="Facebook">Facebook</a>
          {% endif %}
        </div>
      {% endif %}
    </div>

    <div class="footer__column footer__links">
      <h3 class="footer__heading">Useful links</h3>
      <ul class="footer__menu">
        {% for link in section.settings.menu.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>

    <div class="footer__column footer__payments">
      {% if section.settings.show_payment_icons and shop.enabled_payment_types.size > 0 %}
        <h3 class="footer__heading">We accept</h3>
        <div class="footer__payment-icons">
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag }}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>

  <div class="footer__bottom">
    <p class="footer__copyright">
      &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ powered_by_link }}
    </p>
  </div>
</footer>

{% stylesheet %}
  .footer {
    background-color: var(--color-background-alt);
    border-top: 1px solid var(--color-border);
    padding-block: clamp(2rem, 4vw, 3rem) clamp(1rem, 2vw, 1.5rem);
    margin-top: auto;
  }
  
  @media (max-width: 768px) {
    .footer__grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: clamp(1.5rem, 3vw, 2rem);
    max-width: var(--page-width);
    margin: 0 auto;
    padding-inline: clamp(1rem, 4vw, var(--page-margin));
  }

  .footer__column {
    min-width: 0;
  }

  .footer__logo a {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 600;
    text-decoration: none;
    color: var(--color-foreground);
  }

  .footer__heading {
    font-family: var(--font-heading);
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    margin: 0 0 1rem;
  }

  .footer__address,
  .footer__phone {
    margin: 0.5rem 0;
    font-size: 0.9375rem;
    color: var(--color-text-muted);
  }
  .footer__phone a {
    color: var(--color-foreground);
    text-decoration: none;
  }
  .footer__phone a:hover {
    color: var(--color-primary);
  }

  .footer__social {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }
  .footer__social a {
    font-size: 0.8125rem;
    text-decoration: none;
    color: var(--color-text-muted);
  }
  .footer__social a:hover {
    color: var(--color-primary);
  }

  .footer__menu {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .footer__menu li {
    margin: 0.25rem 0;
  }
  .footer__menu a {
    text-decoration: none;
    font-size: 0.9375rem;
    color: var(--color-text-muted);
  }
  .footer__menu a:hover {
    color: var(--color-primary);
  }

  .footer__payment-icons {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  .footer__payment-icons svg {
    height: 24px;
    width: auto;
  }

  .footer__bottom {
    max-width: var(--page-width);
    margin: 2rem auto 0;
    padding-inline: var(--page-margin);
    border-top: 1px solid var(--color-border);
    padding-top: 1rem;
  }
  .footer__copyright {
    margin: 0;
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }
  .footer__copyright a {
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .footer__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Footer menu"
    },
    {
      "type": "checkbox",
      "id": "show_contact",
      "label": "Show address and phone",
      "default": true
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Address",
      "default": "38, Deputy Gunj, Moradabad - 244001, Uttar Pradesh, India"
    },
    {
      "type": "url",
      "id": "social_instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_facebook",
      "label": "Facebook URL"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ]
}
{% endschema %}
