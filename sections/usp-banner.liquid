{% comment %} Glamora USP Banner ‚Äî image left, text + 3 features right {% endcomment %}
<div class="usp-banner shopify-section">
  <div class="usp-banner__grid">
    <div class="usp-banner__image">
      {% if section.settings.image != blank %}
        {{ section.settings.image | image_url: width: 800, height: 600, crop: 'center' | image_tag: loading: 'lazy', class: 'usp-banner__img', alt: section.settings.heading | escape }}
      {% else %}
        <div class="usp-banner__placeholder"></div>
      {% endif %}
    </div>
    <div class="usp-banner__content">
      <h2 class="usp-banner__heading">{{ section.settings.heading | default: 'Discover a beautiful you' }}</h2>
      <p class="usp-banner__subheading">{{ section.settings.subheading | default: 'with our new Makeup Essentials' }}</p>
      <ul class="usp-banner__features">
        {% for block in section.blocks %}
          {% if block.type == 'feature' %}
            <li class="usp-banner__feature" {{ block.shopify_attributes }}>
              <span class="usp-banner__feature-icon">{{ block.settings.icon | default: 'üß™' }}</span>
              <span class="usp-banner__feature-text">{{ block.settings.text | default: 'Lasting Formulas' }}</span>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
      <div class="usp-banner__ctas">
        <a href="{{ section.settings.cta_url | default: routes.all_products_collection_url }}" class="btn btn--primary">{{ section.settings.cta_text | default: 'SHOP NOW' }}</a>
        {% if section.settings.cta2_url != blank %}<a href="{{ section.settings.cta2_url }}" class="btn btn--secondary">{{ section.settings.cta2_text | default: 'READ MORE' }}</a>{% endif %}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .usp-banner { padding: var(--section-padding-block) 0; background: var(--color-background); }
  .usp-banner__grid { display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; align-items: center; max-width: var(--page-width); margin: 0 auto; padding-inline: var(--page-margin); }
  .usp-banner__image { min-height: 400px; }
  .usp-banner__img { width: 100%; height: 100%; object-fit: cover; border-radius: var(--style-border-radius-cards); }
  .usp-banner__placeholder { width: 100%; height: 400px; background: var(--color-background-alt); border-radius: var(--style-border-radius-cards); }
  .usp-banner__heading { font-family: var(--font-heading); font-size: clamp(1.75rem, 3vw, 2.25rem); margin: 0 0 0.25rem; color: var(--color-foreground); }
  .usp-banner__subheading { color: var(--color-text-muted); margin: 0 0 1.5rem; }
  .usp-banner__features { list-style: none; margin: 0 0 1.5rem; padding: 0; }
  .usp-banner__feature { display: flex; align-items: center; gap: 0.75rem; margin-bottom: 0.75rem; }
  .usp-banner__feature-icon { font-size: 1.25rem; }
  .usp-banner__feature-text { font-size: 0.9375rem; color: var(--color-foreground); }
  .usp-banner__ctas { display: flex; gap: 1rem; }
  @media (max-width: 768px) { .usp-banner__grid { grid-template-columns: 1fr; } .usp-banner__image { min-height: 280px; } }
{% endstylesheet %}

