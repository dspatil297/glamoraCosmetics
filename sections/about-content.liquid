{% stylesheet %}
  .about-content { padding: var(--section-padding-block) var(--page-margin); max-width: var(--page-width); margin: 0 auto; }
  .about-content__block { display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; align-items: center; margin-bottom: 3rem; }
  .about-content__block--reverse .about-content__text { order: 1; }
  .about-content__block--reverse .about-content__media { order: 0; }
  .about-content__img { width: 100%; height: auto; border-radius: var(--style-border-radius-cards); }
  .about-content__placeholder { aspect-ratio: 6/5; background: var(--color-background-alt); border-radius: var(--style-border-radius-cards); }
  .about-content__media--small { display: flex; align-items: center; justify-content: center; }
  .about-content__icon { font-size: 4rem; color: var(--color-accent); }
  .about-content__title { font-family: var(--font-heading); font-size: 1.5rem; margin: 0 0 1rem; }
  .about-content__body { line-height: 1.7; color: var(--color-foreground); }
  .about-content__mission { text-align: center; margin-top: 3rem; }
  .about-content__mission-intro { margin: 0 0 1.5rem; color: var(--color-text-muted); }
  .about-content__mission-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem; text-align: left; }
  .about-content__mission-card { padding: 1.5rem; }
  .about-content__mission-icon { font-size: 1.5rem; display: block; margin-bottom: 0.5rem; }
  .about-content__mission-card h3 { font-family: var(--font-heading); font-size: 1rem; margin: 0 0 0.5rem; }
  .about-content__mission-card p { font-size: 0.875rem; color: var(--color-text-muted); margin: 0; line-height: 1.5; }
  @media (max-width: 768px) {
    .about-content__block, .about-content__block--reverse { grid-template-columns: 1fr; }
    .about-content__mission-grid { grid-template-columns: 1fr; }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "About content",
  "tag": "section",
  "class": "section-about",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Story image" },
    { "type": "richtext", "id": "story", "label": "Brand story" },
    { "type": "richtext", "id": "vision", "label": "Vision" }
  ],
  "presets": [{ "name": "About content" }]
}
{% endschema %}
