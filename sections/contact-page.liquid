{% comment %} Glamora Contact ‚Äî address + form (for Contact page) {% endcomment %}
<div class="contact-page shopify-section">
  <div class="contact-page__grid">
    <div class="contact-page__info">
      <h2 class="contact-page__title">Get in touch</h2>
      <p class="contact-page__address">üìç {{ section.settings.address | default: '38, Deputy Gunj, Moradabad - 244001, Uttar Pradesh, India' }}</p>
      <p class="contact-page__phone">üìû <a href="tel:+918650751707">{{ section.settings.phone | default: '+91 86507 51707' }}</a></p>
      <p class="contact-page__email">üìß <a href="mailto:support@glamoracosmetics.in">{{ section.settings.email | default: 'support@glamoracosmetics.in' }}</a></p>
      <p class="contact-page__hours">üïê {{ section.settings.hours | default: 'Mon‚ÄìSat, 10:00 AM ‚Äì 6:00 PM' }}</p>
      {% if section.settings.instagram != blank or section.settings.facebook != blank %}
        <div class="contact-page__social">
          {% if section.settings.instagram != blank %}<a href="{{ section.settings.instagram }}" target="_blank" rel="noopener">Instagram</a>{% endif %}
          {% if section.settings.facebook != blank %}<a href="{{ section.settings.facebook }}" target="_blank" rel="noopener">Facebook</a>{% endif %}
        </div>
      {% endif %}
    </div>
    <div class="contact-page__form-wrap">
      {% form 'contact', class: 'contact-form' %}
        {% if form.posted_successfully? %}
          <p class="contact-form__success">Thank you for your message. We'll get back to you soon.</p>
        {% endif %}
        {% if form.errors %}
          <div class="contact-form__errors">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}
        <label for="contact-name">Full Name *</label>
        <input type="text" id="contact-name" name="contact[name]" required>
        <label for="contact-email">Email *</label>
        <input type="email" id="contact-email" name="contact[email]" required>
        <label for="contact-phone">Phone</label>
        <input type="tel" id="contact-phone" name="contact[phone]">
        <label for="contact-subject">Subject</label>
        <select id="contact-subject" name="contact[subject]">
          <option value="Product Inquiry">Product Inquiry</option>
          <option value="Order Issue">Order Issue</option>
          <option value="Returns">Returns</option>
          <option value="General">General</option>
        </select>
        <label for="contact-message">Message *</label>
        <textarea id="contact-message" name="contact[body]" rows="4" required></textarea>
        <button type="submit" class="btn btn--primary" style="width: 100%;">SEND MESSAGE</button>
      {% endform %}
    </div>
  </div>
  {% if section.settings.show_faq %}
    <div class="contact-page__faq">
      <h2 class="contact-page__faq-title">Frequently Asked Questions</h2>
      <div class="contact-page__faq-list">
        {% for block in section.blocks %}
          {% if block.type == 'faq' %}
            <details class="contact-page__faq-item" {{ block.shopify_attributes }}>
              <summary class="contact-page__faq-question">{{ block.settings.question }}</summary>
              <div class="contact-page__faq-answer">{{ block.settings.answer }}</div>
            </details>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
</div>

{% stylesheet %}
  .contact-page { padding: var(--section-padding-block) var(--page-margin); max-width: var(--page-width); margin: 0 auto; }
  .contact-page__grid { display: grid; grid-template-columns: 1fr 1fr; gap: 3rem; align-items: start; }
  .contact-page__title { font-family: var(--font-heading); font-size: 1.5rem; margin: 0 0 1rem; }
  .contact-page__address, .contact-page__phone, .contact-page__email, .contact-page__hours { margin: 0 0 0.75rem; color: var(--color-foreground); line-height: 1.6; }
  .contact-page__address a, .contact-page__phone a, .contact-page__email a { color: var(--color-primary); text-decoration: none; font-weight: 500; }
  .contact-page__address a:hover, .contact-page__phone a:hover, .contact-page__email a:hover { text-decoration: underline; }
  .contact-page__social { margin-top: 1.5rem; display: flex; gap: 1rem; }
  .contact-page__social a { color: var(--color-primary); text-decoration: none; font-size: 0.875rem; }
  .contact-page__social a:hover { text-decoration: underline; }
  .contact-form label { display: block; font-size: 0.875rem; font-weight: 500; margin: 1rem 0 0.25rem; color: var(--color-foreground); }
  .contact-form input, .contact-form select, .contact-form textarea { width: 100%; padding: 0.75rem; border: 1px solid var(--color-border); border-radius: var(--style-border-radius-inputs); margin-bottom: 0.5rem; font-family: var(--font-body); font-size: 0.9375rem; background: var(--color-background); color: var(--color-foreground); }
  .contact-form input:focus, .contact-form select:focus, .contact-form textarea:focus { outline: none; border-color: var(--color-primary); }
  .contact-form__success { color: var(--color-primary); margin-bottom: 1rem; }
  .contact-form__errors { color: #c00; margin-bottom: 1rem; }
  .contact-page__faq { margin-top: 3rem; padding-top: 3rem; border-top: 1px solid var(--color-border); }
  .contact-page__faq-title { font-family: var(--font-heading); font-size: 1.5rem; margin: 0 0 1.5rem; }
  .contact-page__faq-list { display: flex; flex-direction: column; gap: 0.75rem; }
  .contact-page__faq-item { border: 1px solid var(--color-border); border-radius: var(--style-border-radius-inputs); padding: 1rem; }
  .contact-page__faq-question { font-weight: 600; cursor: pointer; list-style: none; padding-right: 1.5rem; position: relative; }
  .contact-page__faq-question::-webkit-details-marker { display: none; }
  .contact-page__faq-question::after { content: '+'; position: absolute; right: 0; font-size: 1.25rem; }
  .contact-page__faq-item[open] .contact-page__faq-question::after { content: '‚àí'; }
  .contact-page__faq-answer { margin-top: 0.75rem; padding-top: 0.75rem; border-top: 1px solid var(--color-border); color: var(--color-text-muted); line-height: 1.6; }
  @media (max-width: 768px) { .contact-page__grid { grid-template-columns: 1fr; } }
{% endstylesheet %}

{% schema %}
{
  "name": "Contact page",
  "tag": "section",
  "class": "section-contact",
  "settings": [
    { "type": "textarea", "id": "address", "label": "Address" },
    { "type": "text", "id": "phone", "label": "Phone", "default": "+91 86507 51707" },
    { "type": "text", "id": "email", "label": "Email", "default": "support@glamoracosmetics.in" },
    { "type": "text", "id": "hours", "label": "Hours", "default": "Mon‚ÄìSat, 10:00 AM ‚Äì 6:00 PM" },
    { "type": "url", "id": "instagram", "label": "Instagram URL" },
    { "type": "url", "id": "facebook", "label": "Facebook URL" },
    { "type": "checkbox", "id": "show_faq", "label": "Show FAQ", "default": true }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ",
      "settings": [
        { "type": "text", "id": "question", "label": "Question" },
        { "type": "richtext", "id": "answer", "label": "Answer" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact page",
      "blocks": [
        { "type": "faq", "settings": { "question": "What is your return policy?", "answer": "We accept returns within 14 days of delivery for unused, unopened products. See our Refund & Returns Policy for details." }},
        { "type": "faq", "settings": { "question": "Do you ship internationally?", "answer": "Currently we ship within India. International shipping may be available soon." }},
        { "type": "faq", "settings": { "question": "How long does shipping take?", "answer": "Standard shipping takes 3-5 business days. Free shipping is available on orders above ‚Çπ999." }}
      ]
    }
  ]
}
{% endschema %}
